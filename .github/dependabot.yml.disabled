version: 2
updates:
    # Fetch and update latest `composer` pkgs
    - package-ecosystem: composer
      directory: '/'
      schedule:
          interval: daily
          time: '00:00'
      open-pull-requests-limit: 10
      reviewers:
          - thetakhirov
      assignees:
          - thetakhirov
      commit-message:
          prefix: fix
          prefix-development: chore
          include: scope
